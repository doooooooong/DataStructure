CC = g++
LIBDIR = ../../lib
INCDIR = ../../include
CCFLAGS = -Wall -std=c+11 -g
LDFLAGS = -L$(LIBDIR) -lnowic_mac -lsort

SRC1 = sortDriver.cpp
OBJ1 = $(SRC1: .cpp =.o)
EXE1 = sortDriver

$(EXE1): $(OBJS)
	$(CC) -o $@ $^ $(LDFLAGS)

%.o: %.cpp
	$(CC) $(CCFLAGS) -c $< -I$(INCDIR) 
	
.PHONY: all clean
all: $(EXE1)
clean:
	rm -f $(OBJS) $(EXE1)


